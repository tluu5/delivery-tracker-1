<div>
  <div>
    <h1>
      Delivery Tracker
    </h1>
    <p>Know if something gets lost in the mail.</p>
  </div>
</div>

<hr>

<% if current_user != nil %>
  <div>
    <h2>
      Expecting a package?
    </h2>

    <form action="/insert_delivery" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="supposed_to_arrive_on_box">
          Supposed to arrive on
        </label>

        <input type="date" id="supposed_to_arrive_on_box" name="query_supposed_to_arrive_on">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <textarea id="details_box" name="query_details" rows="3"></textarea>
      </div>

      <button>
        Log delivery
      </button>
    </form>
  </div>
<% else %>
  <p>You must <a href="/users/sign_in">sign in</a> to add delivery log.</p>
<% end %>

<hr>

<div style="background-color: rgb(250, 250, 210)" class="waiting_on">
  <h2>Waiting on</h2>
  <ul>
    <% @list_of_deliveries.each do |a_delivery| %>
      <% if a_delivery.arrived == false %>
        <li>
          <div>
            <div>
              <%= a_delivery.description %>
            </div>
            <% if a_delivery.supposed_to_arrive_on < Time.now %>
              <div style="color: red">
                Supposed to arrive on <%= a_delivery.supposed_to_arrive_on %>
              </div>
            <% else %>
              <div>
                Supposed to arrive on <%= a_delivery.supposed_to_arrive_on %>
              </div>
            <% end %>
            <div>
              <%= a_delivery.details %>
            </div>

            <div>
              <form action="/modify_delivery/<%= a_delivery.id %>" method="post">

                <button >
                  Mark as received
                </button>
              </form>
            </div>
          </div>
        <% end %>
      <% end %>
    </li>
  </ul>
</div>

<hr>

<div style="background-color: rgb(144, 238, 144)" class="received">
  <h2>Received</h2>
  <ul>
    <% @list_of_deliveries.each do |a_delivery| %>
      <% if a_delivery.arrived == true %>
        <li>
          <div>
            <div>
              <%= a_delivery.description %>
            </div>

            <div>
              <%= (a_delivery.updated_at).strftime("%M") %> minutes ago <a href="/delete_delivery/<%= a_delivery.id %>">Delete</a>
            </div>
          </div>
        <% end %>
      <% end %>
    </li>
  </ul>
</div>
